{
  "name": "mljr-css-monorepo",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MrCodeEU/mljrCSS.git"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "clean": "turbo run clean && rm -rf node_modules",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "turbo run build && npm publish -w packages/mljr-css -w packages/mljr-svelte --provenance --access public"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "turbo": "^2.0.0"
  },
  "packageManager": "pnpm@10.6.0",
  "engines": {
    "node": ">=18"
  }
}