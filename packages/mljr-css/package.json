{
  "name": "mljr-css",
  "version": "1.0.0",
  "description": "A TailwindCSS-based CSS framework with orange/purple color scheme",
  "type": "module",
  "main": "./dist/plugin.cjs",
  "module": "./dist/plugin.js",
  "types": "./dist/plugin.d.ts",
  "exports": {
    ".": {
      "types": "./dist/plugin.d.ts",
      "import": "./dist/plugin.js",
      "require": "./dist/plugin.cjs"
    },
    "./css": "./dist/mljr.css",
    "./css/min": "./dist/mljr.min.css",
    "./src/*": "./src/*",
    "./plugin": {
      "types": "./dist/plugin.d.ts",
      "import": "./dist/plugin.js",
      "require": "./dist/plugin.cjs"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "pnpm build:plugin && pnpm build:css",
    "build:css": "postcss src/index.css -o dist/mljr.css && postcss src/index.css -o dist/mljr.min.css --env production",
    "build:plugin": "tsup src/plugin.ts --format cjs,esm --dts --clean",
    "dev": "postcss src/index.css -o dist/mljr.css --watch",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "css",
    "tailwindcss",
    "plugin",
    "framework",
    "components"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MrCodeEU/mljrCSS.git",
    "directory": "packages/mljr-css"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.19",
    "cssnano": "^7.0.1",
    "postcss": "^8.4.38",
    "postcss-cli": "^11.0.0",
    "postcss-import": "^16.1.0",
    "tailwindcss": "^3.4.3",
    "tsup": "^8.0.2",
    "typescript": "^5.4.5"
  },
  "peerDependencies": {
    "tailwindcss": ">=3.4.0"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  }
}
